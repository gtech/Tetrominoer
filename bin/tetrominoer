#!/usr/bin/env ruby
$: << File.join(File.dirname(__FILE__), "..", "lib")
require "tetrominoer"

module Tetrominoer


  o = O.new()
  l = L.new()
  r = R.new()
  i = I.new()
  s = S.new()
  z = Z.new()

  block_array = [o,l,r,i,s,z] #[o,l,r,i,s,z]
  rows = 4
  columns = 5
  
  pg = PossibilityGenerator.new(rows,columns)
  pg.generate(block_array)

  solver = Solver.new(pg.possibility_space, block_array.length)
  solutions = solver.solve(pg.possibility_space)
#  binding.pry
