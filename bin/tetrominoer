#!/usr/bin/env ruby
$: << File.join(File.dirname(__FILE__), "..", "lib")
require "tetrominoer"

module Tetrominoer


  o = O.new()
  l = L.new()
  r = R.new()
  i = I.new()
  s = S.new()
  z = Z.new()

  block_array = [o,l,r] #[o,l,r,i,s,z]
  rows = 6
  columns = 3
  pg = PossibilityGenerator.new(rows,columns)
  pg.generate(block_array)

  solution = Solver.solve(pg.possibility_space, block_array.length)
  if solution
    printer = Printer.new(solution, block_array, rows, columns)
  printer.print
  else
    puts "Unsolvable"
  end


end
